<!DOCTYPE html>
<html>
  <head>
    <title>StaffList</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="true" aria-controls="navbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Staff Listing", root_path, class: "navbar-brand"%>
        </div>

        <% if user_signed_in? %>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-pills navbar-right">
            <li class="dropdown">
              <%= link_to "#",
                    class: "dropdown-toggle", "aria-haspopup"=> true, "aria-expanded"=> false, data: {toggle: "dropdown"} do %>
                    <span class="glyphicon glyphicon-th">
                      </span> Dashboard
              <%end%>
              <ul class="dropdown-menu">
                <li class="<%= active_class(user_path(current_user)) %>">
                  <%= link_to user_path(current_user)  do %>
                    <span class="glyphicon glyphicon-pencil">
                      </span> My Profile
                  <% end %>
                </li>

                <li class="<%= active_class(posts_path) %>">
                  <%= link_to posts_path do %>
                    <span class="glyphicon glyphicon-comment">
                    </span> Add a Newsfeed Post
                  <% end %>
                </li>

                <li class="<%= active_class(users_path)%>">
                  <%= link_to users_path do %>
                    <span class="glyphicon glyphicon-user"></span> All Users
                  <% end %>
                </li>

                <li class="<%= active_class(departments_path) %>">
                  <%= link_to departments_path do %>
                    <span class="glyphicon glyphicon-briefcase">
                      </span> All Departments
                  <% end %>
                </li>

                <li>
                  <%= link_to destroy_user_session_path,
                  method: :delete,
                  data: { confirm: "Are you sure you want to logout?" },
                  class: "list-group-item list-group-item-danger" do %>
                    <span class="glyphicon glyphicon-off">
                    </span> Logout
                  <% end %>
                </li>
              </ul>
            </li>

          </ul>
        </div>
        <% end %>
        </div>
      </div>
    </nav>

    <div class="container-fluid content">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <% if notice %>
            <div class="alert alert-success alert-dismissable notice">
              <%= notice %>
              <button type="button" class="close" data-dismiss="alert"
                  aria-label="close">
                <span aria-hidden="true">&times;</span>
              </button>
          <% elsif alert %>
            <div class="alert alert-danger alert-discalert">
              <%= alert %>
              <button type="button" class="close" data-dismiss="alert"
                  aria-label="close">
                <span aria-hidden="true">&times;</span>
              </button>
          <% else %>
            <div>
          <% end %>

          </div>

          <%= yield %>
        </div>

          <div class="col-md-2">
          </div>
    </div>

  </body>
</html>
