<!DOCTYPE html>
<html>
  <head>
    <title>StaffList</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="<%= root_path %>">Staff Listing</a>
        </div>
        <% if user_signed_in? %>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-pills navbar-right">
            <li class="dropdown">
              <%= link_to "#",
                    class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
                    <span class="glyphicon glyphicon-th">
                      </span> Dashboard
              <%end%>
              <ul class="dropdown-menu">
                <li class="<%= active_class(edit_user_registration_path) %>">
                  <%= link_to edit_user_registration_path  do %>
                    <span class="glyphicon glyphicon-pencil">
                      </span> My Profile
                  <% end %>
                </li>

                <li class="<%= active_class(posts_path) %>">
                  <%= link_to posts_path do %>
                    <span class="glyphicon glyphicon-comment">
                    </span> Add a Newsfeed Post
                  <% end %>
                </li>

                <li class="<%= active_class(users_path)%>">
                  <%= link_to users_path do %>
                    <span class="glyphicon glyphicon-user"></span> All Users
                  <% end %>
                </li>

                <li class="<%= active_class(departments_path) %>">
                  <%= link_to departments_path do %>
                    <span class="glyphicon glyphicon-briefcase">
                      </span> All Departments
                  <% end %>
                </li>
              </ul>
            </li>
            <li>
          </ul>
        </div>
        <% end %>
      </div>
    </nav>

    <div class="container content">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <% if notice %>
            <div class="alert alert-success notice">
              <%= notice %>
          <% elsif alert %>
            <div class="alert alert-danger alert">
              <%= alert %>
          <% else %>
            <div>
          <% end %>
          </div>

          <%= yield %>
        </div>

        <% if user_signed_in? %>
          <div class="col-md-2">
          </div>
         <% end %>
    </div>

  </body>
</html>
