<!DOCTYPE html>
<html>
  <head>
    <title>StaffList</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class = "notice"><%= notice %></p>
    <div class="container">
      <p class = "alert"><%= alert %></p>
      <% if user_signed_in? %>
        <div class="col-md-2">
          <p><%= link_to 'List of Departments', departments_path %></p>
          <p><%= link_to 'Newsfeed', posts_path %></p>
          <p><%= link_to 'Go to Users', users_path %></p>
          <%= button_to 'Logout', destroy_user_session_path,
            method: :delete %>
          </div>
        <% end %>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
