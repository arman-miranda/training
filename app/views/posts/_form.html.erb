<%= form_for(post) do |f| %>
  <div class="form-group">
    <%= f.text_area :post, placeholder: "What are you thinking about?",
      class: "form-control", required: true, maxlength: 3600 %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary", id: "post_btn" %>
  </div>
<% end %>
