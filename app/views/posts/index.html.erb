<div class="container-fluid">
  <h1>Newsfeed</h1>
  <%= render 'form', post: @post %>
</div>
<% @posts.each do |post| %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-4">
          <%= image_tag post.user.avatar.url(:thumb) %><br />
          <%= post.user.first_name %><br />
          <%= post.user.department.name%><br />
          Posted at: <%= formatted_post_creation_time(post.created_at) %>
        </div>
        <div class="col-md-8">
          <p><%= post.post %></p>
          <p><%= post.created_at %></p>
        </div>
      </div>
      <hr />
    </div>
<% end %>
<%= link_to "See all Users", users_path%>
